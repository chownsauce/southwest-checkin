# Default server configuration
#
server {
	listen 443 ssl;
	server_name ur.url.com;

	passenger_user chkmein;
	passenger_group chkmein;
	passenger_enabled on;


	passenger_env_var SITE_NAME "Southwest Checkin";
	passenger_env_var RAILS_SERVE_STATIC_FILES false;
	passenger_env_var SITE_URL https://ur.url.com;
	passenger_env_var MAILER_DEFAULT_FROM_EMAIL "\"chkmein\" <ur@url.com>";
	passenger_env_var SMTP_SERVER localhost;
	passenger_env_var MAILER_DOMAIN ur.url.com;
	passenger_env_var SECRET_KEY_BASE "***CHANGEME***";
	passenger_env_var SOUTHWEST_CHECKIN_DATABASE_USER chkmein;
	passenger_env_var SOUTHWEST_CHECKIN_DATABASE_PASSWORD "***CHANGEME***";

	#passenger_app_env development;
	root /srv/chkmein/southwest-checkin;
	passenger_app_root /srv/chkmein/southwest-checkin;

	ssl on;
	ssl_certificate /srv/ssl/server.crt;
	ssl_certificate_key /srv/ssl/server.key;

	ssl_session_timeout 5m;

	ssl_protocols               TLSv1 TLSv1.1 TLSv1.2;
	ssl_ciphers                 EECDH+AES128:RSA+AES128:EECDH+AES256:RSA+AES256:EECDH+3DES:RSA+3DES:EECDH+RC4:RSA+RC4:!MD5;
	ssl_prefer_server_ciphers   on;

	access_log /var/log/nginx/chkmein_access.log;
	error_log /var/log/nginx/chkmein_error.log;

	location ~* ^/public/ {
		gzip_static on;
		expires max;
		root /srv/chkmein/southwest-checkin/public;
	}

	# pass the PHP scripts to FastCGI server listening on 127.0.0.1:9000
	#
	#location ~ \.php$ {
	#	include snippets/fastcgi-php.conf;
	#
	#	# With php7.0-cgi alone:
	#	fastcgi_pass 127.0.0.1:9000;
	#	# With php7.0-fpm:
	#	fastcgi_pass unix:/run/php/php7.0-fpm.sock;
	#}

	# deny access to .htaccess files, if Apache's document root
	# concurs with nginx's one
	#
	#location ~ /\.ht {
	#	deny all;
	#}
}


